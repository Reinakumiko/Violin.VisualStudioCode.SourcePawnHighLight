{
    "comments": {
        // 行注释标识符
        "lineComment": "//",
        // 块注释标识符
        "blockComment": [ "/*", "*/" ]
    },
    // 括号
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    // 输入时自动补全的符号
    "autoClosingPairs": [
        ["<", ">"],
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    // ???
    // symbols that that can be used to surround a selection
    "surroundingPairs": [
        ["<", ">"],
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ]
}